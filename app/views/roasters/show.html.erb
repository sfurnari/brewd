
<h3 class="name">
    <%= @roaster.name %>
</h3>
<div class="address">
    <p>
        <%= @roaster.address %>
    </p>
</div>
<hr>
Cafes Supplied:
<ul>
    <% @roaster.cafes.each do |c|%>
        <li>
            <%= link_to c.name, cafe_path(c) %>
        </li>
    <% end%>
</ul>

<hr>

<div class="new-review">
    <% if @current_user.present? %> 
        <%= link_to "Add new Rating", new_roaster_roaster_rating_path(@roaster) %>
    <% end %>
</div>

<div class="show-visits">
    <p>
        Recent Reviews:
        <%= render @roaster.roaster_ratings %>
    </p>
</div>
<hr>
<div class="map">
    <iframe width="600" height="450" style="border:0" loading="lazy" allowfullscreen src="https://www.google.com/maps/embed/v1/place?q=<%= @roaster.address %>&key=AIzaSyCdE635lhPuKadi5SMfYwPrwZkG27OZ-d4"></iframe>
</div>
<div class="admin-controls">
    <% if @current_user.present? && @current_user.admin %>
        <%= link_to 'Edit', edit_roaster_path(@roaster.id) %>
        |
        <%= link_to 'Delete', roaster_path(@roaster), method: 'delete' %>
    <% end%>
</div>