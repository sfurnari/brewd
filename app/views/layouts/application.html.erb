<!DOCTYPE html>
<html>
  <head>
    <title>Brewd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= cloudinary_js_config %>
    <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
  </head>

  <body>
    <header class="nav-banner">
      <h1>
        Brewd.
      </h1>
      <nav>
          <%= link_to 'Home', root_path %>
          <%= link_to 'Cafes', cafes_path %>
          <%= link_to 'Roasters', roasters_path  %>
          <%= link_to 'Users', users_path %>
          <% if @current_user.present? %>
            <%= link_to 'New Cafe', new_cafe_path %>
            <%= link_to 'New Roaster', new_roaster_path %>
          <div id="logout">
            <p>
              Signed in as: <%= link_to "#{@current_user.name}", user_path(@current_user.id) %>
              |
              <%= link_to 'Logout', login_path, method: 'delete' %>
            </p>
          </div>
            <% else %>
              <div id="login">
                <p>
                  <%= link_to 'Login', login_path %>
                  |
                  <%= link_to 'Sign Up', new_user_path %>
                </p>
              </div>
            <% end %>
          </div>
      </nav>
    </header>
    
    <%= yield %>

  </body> 
</html>
